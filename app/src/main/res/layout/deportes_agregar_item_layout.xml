<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/deportes_agregar_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/deportes_agregar_item_imagen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_noticias"
            app:srcCompat="@drawable/sportec_logo"
            android:gravity="center_horizontal"
            android:background="@drawable/gradiente_imagen"
            />
        <TextView
            android:id="@+id/deportes_agregar_item_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/tamano_texto_deporte"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@id/deportes_agregar_item_imagen"
            android:textColor = "@color/colorBlanco"/>




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>