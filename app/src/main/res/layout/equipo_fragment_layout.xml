<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum = "4"
    android:fillViewport="true"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/equipo_fragment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/equipo_fragment_foto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tamano_imagenes_noticia_featured"
                app:srcCompat="@drawable/sportec_logo"
                android:gravity="center_horizontal"
                android:background="@drawable/gradiente_imagen"
                />
            <TextView
                android:id="@+id/equipo_fragment_tv_nombre_equipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/tamano_texto_equipo_titulo"
                android:gravity="center_horizontal"
                android:layout_alignBottom="@id/equipo_fragment_foto"
                android:textColor = "@color/colorBlanco"/>




        </RelativeLayout>
        <TextView
            android:id="@+id/equipo_fragment_tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""

            android:textSize="@dimen/tamano_texto_equipo_titulo"
            android:gravity="center_horizontal"/>

        <ListView
            android:id="@+id/equipo_fragment_listview_miembros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
</ScrollView>


